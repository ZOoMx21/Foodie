<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:hapticFeedbackEnabled="false"
    tools:context=".SignInActivity">

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="127dp"
        android:fontFamily="@font/courgette"
        android:text="Welcome Back To"
        android:textColor="@color/purple"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/courgette"
        android:text="Foodie"
        android:textColor="@color/purple"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/txt_usrname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/editTxt_usrname"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:text="Email:"
        android:textColor="@color/purple"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTxt_usrname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/purple"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/purple" />

    <TextView
        android:id="@+id/txt_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxt_usrname"
        android:layout_alignStart="@+id/editTxt_pass"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="Password:"
        android:textColor="@color/purple"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTxt_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxt_usrname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/purple"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/purple" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxt_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/purple"
        android:fontFamily="@font/courgette"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/yellow"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_noAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Don't have an account? Join the Foodies gang now!"
        android:textColor="@color/purple" />
</RelativeLayout>