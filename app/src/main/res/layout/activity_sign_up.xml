<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:hapticFeedbackEnabled="false"
    tools:context=".SignInActivity">

    <TextView
        android:id="@+id/txt_ops"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/courgette"
        android:gravity="center"
        android:text="Oops you don't have an account.. Create one and Join The Foodies"
        android:textColor="@color/purple"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_usrnameUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ops"
        android:layout_alignStart="@+id/editTxt_usrnameUp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:text="Email:"
        android:textColor="@color/purple"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTxt_usrnameUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ops"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/purple"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/purple" />

    <TextView
        android:id="@+id/txt_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxt_usrnameUp"
        android:layout_alignStart="@+id/editTxt_passUp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="Password:"
        android:textColor="@color/purple"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTxt_passUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTxt_usrnameUp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/purple"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/purple" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxt_retypepassUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/purple"
        android:fontFamily="@font/courgette"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/yellow"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_retypePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTxt_passUp"
        android:layout_alignStart="@+id/editTxt_retypepassUp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="Confirm Password:"
        android:textColor="@color/purple"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTxt_retypepassUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTxt_passUp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/purple"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/purple" />

</RelativeLayout>